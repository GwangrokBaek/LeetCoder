{
  "name": "leetup",
  "publisher": "GwangrokBaek",
  "displayName": "LeetUp",
  "description": "vscode extension for leetcode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:nodeDependencies"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "leetup": [
        {
          "id": "home",
          "name": "Home"
        },
        {
          "id": "dailyChallenge",
          "name": "Daily Challenge",
          "when": "leetup.userInfo == true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leetup",
          "title": "LeetUp",
          "icon": "assets/image/dep.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "home",
        "contents": "To use LeetCoder, please sign in with your account.\n[Sign in](command:leetup.SignIn)\nIf you fail to sign in with accounts, then [use cookie from browser](https://www.naver.com).\n",
        "when": "leetup.userInfo == false"
      }
    ],
    "commands": [
      {
        "command": "leetup.submit",
        "title": "LeetCode Submit"
      },
      {
        "command": "leetup.SignIn",
        "title": "LeetCode SignIn"
      },
      {
        "command": "leetup.logout",
        "title": "LeetCode Logout"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.2"
  }
}
